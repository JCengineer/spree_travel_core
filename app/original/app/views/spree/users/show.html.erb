<!--<h3><%#= accurate_title %></h3>-->

<div id="cart-header" class="columns alpha omega sixteen">
  <p><%= t('my_account') %></p>
</div>

<% if current_user.has_role?('admin') %>
    <%= link_to t('new_order'), '/spree/orders/without_product' %>
<% end %>

<div class="row">
    <%#= @user.email %> <!--(<%#= link_to t('edit'), spree.edit_account_path %>)-->
    <%= @user.email %> (<a href="#" onclick="loginOverlay('backedit', 'backlogin')"><%= t('edit') %></a>)
</div>

<div data-hook="account_my_orders">

  <p class="product-title-in"><%= t('my_orders') %></p>
  <br>
  <% if @orders.present? %>
    <table id="summary" class="order-summary">
      <thead>
        <tr>
          <th><%= t('order_number') %></th>
          <th><%= t('order_date') %></th>
          <th><%= t('status') %></th>
          <th><%= t('payment_state') %></th>
          <th><%= t('total') %></th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr class="<%= cycle('even', 'odd') %>">
          <td><%= link_to order.number, order_url(order) %></td>
          <td><%= l order.created_at.to_date %></td>
          <td><%= t(order.state).html_safe %></td>
          <td><%= t("payment_states.#{order.payment_state}") if order.payment_state %></td>
          <td><%= number_to_currency order.total, :precision => 0  %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p><%= t('you_have_no_orders_yet') %></p>
  <% end %>
  <br />

</div>


<div id="backedit" class="back_overlay" >
  <div class="contentWrap" id="overlayedit">
    <div id="edit-customer">
      <div class="head_login">
        <%= image_tag('store/img_trans.gif', :size => "1x1") %>
        <h6 class="title_user"><%= t('editing_user') %></h6><br/><br/>
      </div>
      <div>
        <%= form_for @user, :url => spree.user_path(@user), :method => :put do |f| %>
            <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
            <p>
              <%= f.submit t(:update), :id => "button-edit" %>
            </p>
        <% end %>
        <a href="#" onclick="closeOverlay('backedit')" class="close-login"><%= t('close') %></a>
      </div>
    </div>
  </div>
</div>
