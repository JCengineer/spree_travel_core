<li class="alpha ten columns child">
  <div class="child-image">
    <%= small_image(child, :itemprop => "image") %>
  </div>
  <% combinations = display_combination_price(@product)%>
  <%= %>

  <div class="child-title">
    <% child.option_values.includes(:translations).each do |option_value|%>
        <div class="child-pair">
          <span class="child-keye"><%= option_value.option_type.presentation %>:</span>
          <span class="child-value"><%= option_value.presentation %></span>
        </div>
        <% match = []
            combinations.each do |c|
               if c.variant.option_values.first == option_value
                 match << c
               end
            end
        %>
        <% match.each do |c|%>
            <div style="float: right;" class="">
                Meal Plan: <%= c.rate.option_values[2].option_value.presentation%>
                Price: <span class="combination-price-<%=c.id%>"> <%= c.price * (params[:hotel_end_date].to_date - params[:hotel_start_date].to_date).to_i * params[:hotel_rooms].to_i %></span><br/>
              <%= render 'cart_form', :room=>true, :variant_id => child.id, :combination => c %>

            </div>
        <% end %>

    <% end %>



  </div>
</li>
