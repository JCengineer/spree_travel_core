<div data-hook="admin_product_types_form_fields" class="row">
  <div class="alpha four columns">
    <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, :class => 'fullwidth' %>
    <% end %>
  </div>

  <div class="four columns">
    <%= f.field_container :presentation do %>
      <%= f.label :presentation, Spree.t(:presentation) %>
      <%= f.text_field :presentation, :class => 'fullwidth' %>
    <% end %>
  </div>

  <div class="two columns omega">
    <%= f.field_container :enabled do %>
      <%= f.check_box :enabled  %>
      <%= f.label :enabled, Spree.t(:enabled) %>
    <% end %>
  </div>

</div>
