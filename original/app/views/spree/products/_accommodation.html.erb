<ul id="products" >
  <% products_related.each do |product| %>
    <li id="product_<%= product.id %>" class="columns alpha omega eleven show-in" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
        <div id="block-one-room" class="columns alpha four">
          <div class="product-image">
           <%= product_image_index(product) %>
          </div>
        </div>
        <div id="block-two-room" class="columns omega seven">
          <div id="head-one" class="columns alpha omega seven" >
            <ul id="information">
              <li>
                <% new_params = params.clone %>
                <%= link_to new_params.merge!({:controller => :products, :action => :show , :id => product.permalink}), {:class => "product-name"} do %>
                  <span itemprop="name"><%= truncate(product.name, :length => 35, :omission => "..." )%></span>
                <% end %>
              </li>
              <li class="icon-stars-<%= product.product_properties.where(:property_id => Spree::Property.find_by_name('stars')).first.value %>"></li>
            </ul>
          </div>
          <div id="head-two" class="columns alpha omega seven" >
            <ul id="product-head">
              <li>
                <ul class="product-data">
                  <li class="product-info-value"><%= t('in')%>: </li>
                  <li>
                    <% taxon = product.taxons.where(:taxonomy_id => Spree::Taxon.find_by_permalink('categories').taxonomy_id).first %>
                    <%= link_to taxon.name, nested_taxons_path(taxon.permalink), :class => "product-link" %>
                  </li>
                </ul>
              </li>
              <li>
                <ul class="product-data">
                  <li class="icon-tripadvisor-<%= product.get_stars[:star].to_s.gsub(".", "-")%>"></li>
                  <li class="product-info-value"><%= product.get_stars[:rcount]%> <%= opinion(product.get_stars[:rcount]) %></li>
                </ul>
              </li>
            </ul>
          </div>
          <div id="description" class="columns alpha omega seven product-text" itemprop="description">
            <%= truncate( product.description.to_s.gsub(/<[^>]*>/,'')  , :length => 200, :omission => "...") %>
          </div>

          <%= render(:partial => "spree/shared/product_list_price_detail", :locals => { :product => product, :params => params, :type => "accommodation"}) %>

          <div class="columns omega three">
            <ul id="options">
              <% product.properties[0..2].each do |p| %>
                  <% if p.property_type_id == Spree::PropertyType.find_by_name("General Services").id and p.presentation.length < 40 %>
                      <li><ul class="columns alpha three product-option"><li class="icon-check"></li><li class="product-info"><%= p.presentation %></li></ul></li>
                  <% end %>
              <% end %>
            </ul>
          </div>

        </div>
      </li>
  <% end %>
</ul>