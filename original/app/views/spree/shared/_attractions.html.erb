<li id="product_<%= product.id %>" class="show-out" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
    <div id="block-one" class="four columns">
      <div class="product-image">
        <%= if !product.images.empty?
             link_to (image_tag product.images[0].attachment.url(:list)), product
           end %>
      </div>
    </div>
    <div id="block-two" class="eight columns">
      <div id="head-one" class="eight columns alpha" >
        <ul id="information">
          <li><%= link_to product, :class => "product-name" do%>
                <span itemprop="name"><%= truncate(product.name, :length => 35, :omission => "...") %></span>
              <% end %></li>
          <% stars = product.product_properties.where(:property_id => Spree::Property.find_by_name('stars')).first %>
          <% if !stars.nil? %>
            <li class="icon-stars-<%= stars.value %>"></li>
          <% end %>
        </ul>
      </div>
      <div id="head-two" class="eight columns alpha" >
        <ul id="product-head">
          <li>
            <ul class="product-data">
              <li class="icon-destination"></li>
              <li><%= my_destination(product) %></li>
              <!--<li>-->
                  <!--<%# taxon_country =  Spree::Taxon.where(:permalink => "destinations/#{product.taxons[0].permalink.split('/')[1]}").first %>-->
                  <!--<%# if taxon_country %>-->
                    <!--<%# product_country = Spree::Product.find_by_name(taxon_country.name) %>-->
                    <!--<%#= link_to product_country.name, product_country, :class => "product-link" %>-->
                  <!--<%# end %>-->
              <!--</li>-->
            </ul>
          </li>
          <li>
            <ul class="product-data">
              <li class="icon-tripadvisor-<%= product.get_stars[:star].to_s.gsub(".", "-")%>"></li>
              <li class="product-info-value"><%= product.get_stars[:rcount]%> <%= opinion(product.get_stars[:rcount]) %></li>
            </ul>
          </li>
        </ul>
      </div>
      <div id="description" class="eight columns alpha product-text" itemprop="description">
        <%= truncate( product.small_description.to_s.gsub(/<[^>]*>/,'')  , :length => 200, :omission => "...") if product.description %>
      </div>
      <div id="details" class="two columns alpha" >
        <%= link_to product, :class => "go-to-detail-button" do %>
            <ul id="product-detail-icon">
              <li class="icon-detail" />
            </ul>
            <ul id="product-detail-text">
              <li class="product-text-button"><%= t('details') %></li>
            </ul>
        <% end %>
      </div>
      <div class="columns omega six">
        <ul id="options">
          <% product.properties.each do |p| %>
              <% if p.property_type_id == Spree::PropertyType.find_by_name("General Services").id and p.presentation.length < 40 %>
                  <li><ul class="columns alpha omega two product-option"><li class="icon-check"></li><li class="product-info"><%= p.presentation %></li></ul></li>
              <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </li>
